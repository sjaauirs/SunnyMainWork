-- Navitus

DO $$
DECLARE
    v_tenant_code TEXT := '<Navitus-tenant-code>'; -- Replace with desired tenant_code
BEGIN
    UPDATE tenant.tenant
    SET tenant_attr = jsonb_set(
        tenant_attr,
        '{ux,themeColors,RewardDialTextColor}',
        '"#000000"',
        true
    )
    WHERE tenant_code = v_tenant_code
      AND tenant_attr #>> '{ux,themeColors,RewardDialTextColor}' IS NULL;
END$$;


